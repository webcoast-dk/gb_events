<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.sheetTitle
          </sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <settings.displayMode>
            <TCEforms>
              <label>LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.display_mode</label>
              <config>
                <type>select</type>
                <items type="array">
                  <numIndex index="0" type="array">
                    <numIndex index="0">LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.display_mode.list</numIndex>
                    <numIndex index="1">list</numIndex>
                  </numIndex>
                  <numIndex index="1" type="array">
                    <numIndex index="0">LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.display_mode.archive</numIndex>
                    <numIndex index="1">archive</numIndex>
                  </numIndex>
                  <numIndex index="2" type="array">
                    <numIndex index="0">LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.display_mode.calendar</numIndex>
                    <numIndex index="1">calendar</numIndex>
                  </numIndex>
                </items>
                <maxitems>1</maxitems>
                <size>1</size>
              </config>
              <onChange>reload</onChange>
            </TCEforms>
          </settings.displayMode>
          <settings.years>
            <TCEforms>
              <label>LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.years
              </label>
              <config>
                <type>input</type>
                <eval>int</eval>
                <size>5</size>
                <default>1</default>
              </config>
              <displayCond>FIELD:settings.displayMode:!=:calendar</displayCond>
            </TCEforms>
          </settings.years>
          <settings.detailsPid>
            <TCEforms>
              <label>LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.details_pid</label>
              <config>
                <type>group</type>
                <internal_type>db</internal_type>
                <allowed>pages</allowed>
                <size>1</size>
                <maxitems>1</maxitems>
                <minitems>0</minitems>
                <show_thumbs>1</show_thumbs>
                <wizards>
                  <suggest>
                    <type>suggest</type>
                  </suggest>
                </wizards>
              </config>
            </TCEforms>
          </settings.detailsPid>
          <settings.startDateOnly>
            <TCEforms>
              <label>LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.startDateOnly</label>
              <config>
                <type>check</type>
                <default>0</default>
              </config>
              <displayCond>FIELD:settings.displayMode:!=:calendar</displayCond>
            </TCEforms>
          </settings.startDateOnly>
          <settings.showStartedEvents>
            <TCEforms>
              <label>LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.showStartedEvents</label>
              <config>
                <type>check</type>
                <default>0</default>
              </config>
              <displayCond>
                <AND>
                  <numIndex index="0">FIELD:settings.displayMode:!=:calendar</numIndex>
                  <numIndex index="1">FIELD:settings.displayMode:!=:archive</numIndex>
                </AND>
              </displayCond>
            </TCEforms>
          </settings.showStartedEvents>
          <settings.categories>
            <TCEforms>
              <label>LLL:EXT:gb_events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.categories</label>
              <config>
                <type>select</type>
                <autoSizeMax>50</autoSizeMax>
                <foreign_table>sys_category</foreign_table>
                <foreign_table_where>AND sys_category.sys_language_uid IN (-1, 0) ORDER BY sys_category.sorting ASC</foreign_table_where>
                <maxitems>9999</maxitems>
                <renderMode>tree</renderMode>
                <size>10</size>
                <treeConfig>
                  <appearance>
                    <expandAll>1</expandAll>
                    <showHeader>1</showHeader>
                  </appearance>
                  <parentField>parent</parentField>
                </treeConfig>
              </config>
            </TCEforms>
          </settings.categories>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>
